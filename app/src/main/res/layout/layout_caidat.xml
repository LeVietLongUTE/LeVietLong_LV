<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/phiguixe"
       android:padding="10dp">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Phí gửi xe"
           android:layout_marginLeft="20dp"
           android:textStyle="bold"
           android:textSize="23dp"
           android:id="@+id/pg"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pg"
           android:text="Cấu hình thông số về giá"
           android:textStyle="italic"
           android:layout_marginLeft="20dp"
           android:id="@+id/ch"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/ch"
           android:text="giá hiện tại"
           android:layout_marginLeft="40dp"
           android:id="@+id/gia"
           android:layout_below="@+id/pg"/>

       <TextView
           android:id="@+id/money"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pg"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/gia"
           android:text="2000 Đồng" />
   </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#3F51B5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/caidat"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt lại"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:id="@+id/sj"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sj"
            android:text="Xóa toàn bộ dữ liệu và bắt đầu mới"
            android:textStyle="italic"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"/>
</LinearLayout>